@model IEnumerable<odev.Models.Ders>
@{
    Layout = "~/Views/Shared/Sidebar.cshtml";
}
<a href="@Url.Action("DersAdd","Home")" class="btn px-15 btn-primary">
    <i class="las la-plus fs-16"></i>Yeni Ders Ekle
</a>
<div class="panel panel-default table-responsive">
    <table class="table table-striped table-bordered templatemo-user-table">
        <thead>
            <tr class="userDatatable-header">
                <th>
                    <span class="userDatatable-title">DersId</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">DersAdi</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Kredisi</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Öğretmeni</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Edit</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Sil</span>
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var ders in Model)
                {
                    <tr>
                        <td>
                            <div class="userDatatable-content" style="align-items:center">
                                @ders.DersId
                            </div>
                        </td>
                        <td>
                            <div class="userDatatable-content">
                                @ders.DersAdi
                            </div>
                        </td>
                        <td>
                            <div class="userDatatable-content">
                                @ders.Kredisi
                            </div>
                        </td>
                        <td>
                            <div class="userDatatable-content">
                                @ders.OkulYonetim.AdSoyad
                            </div>
                        </td>
                        <td><a href="@Url.Action("DersEdit","Home", new {  id=ders.DersId  })" class="templatemo-edit-btn">Edit</a></td>
                        <td><a href="@Url.Action("DersRemove","Home", new {  id=ders.DersId  })" class="templatemo-link">Delete</a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
            }
        </tbody>
    </table>
</div>

