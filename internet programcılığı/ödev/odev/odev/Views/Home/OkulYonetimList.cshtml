@model IEnumerable<odev.Models.OkulYonetim>
@{
    Layout = "~/Views/Shared/Sidebar.cshtml";
}
<a href="@Url.Action("OkulYonetimAdd","Home")" class="btn px-15 btn-primary">
    <i class="las la-plus fs-16"></i>Yeni Personel Ekle
</a>
<div class="panel panel-default table-responsive">
    <table class="table table-striped table-bordered templatemo-user-table">
        <thead>
            <tr class="userDatatable-header">
                <th>
                    <span class="userDatatable-title">PersonelId</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Adı Soyadı</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Görevi</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Yönetim Tipi</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Edit</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Sil</span>
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var personel in Model)
                {
                    <tr>
                        <td>
                            <div class="userDatatable-content" style="align-items:center">
                                @personel.OkulYonetimId
                            </div>
                        </td>
                        <td>
                            <div class="userDatatable-content">
                                @personel.AdSoyad
                            </div>
                        </td>
                        <td>
                            <div class="userDatatable-content">
                                @personel.Gorevi
                            </div>
                        </td>
                        <td>
                            <div class="userDatatable-content">
                                @personel.YonetimTip
                            </div>
                        </td>
                        <td><a href="@Url.Action("OkulYonetimEdit","Home", new {  id=personel.OkulYonetimId  })" class="templatemo-edit-btn">Edit</a></td>
                        <td><a href="@Url.Action("OkulYonetimRemove","Home", new {  id=personel.OkulYonetimId  })" class="templatemo-link">Delete</a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
            }
        </tbody>
    </table>
</div>
