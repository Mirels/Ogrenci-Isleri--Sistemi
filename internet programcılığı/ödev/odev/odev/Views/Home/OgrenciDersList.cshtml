@model IEnumerable<odev.Models.OgrenciDers>
@{
    Layout = "~/Views/Shared/Sidebar.cshtml";
}
<a href="@Url.Action("OgrenciDersAdd","Home")" class="btn px-15 btn-primary">
    <i class="las la-plus fs-16"></i>Yeni Ders Atama
</a>
<div class="panel panel-default table-responsive">
    <table class="table table-striped table-bordered templatemo-user-table">
        <thead>
            <tr class="userDatatable-header">
                <th>
                    <span class="userDatatable-title">Id</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Ders Adı</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Öğrenci</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Edit</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Sil</span>
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var ogrenciDers in Model)
                {
                    <tr>
                        <td>
                            <div class="userDatatable-content" style="align-items:center">
                                @ogrenciDers.OgrenciDersId
                            </div>
                        </td>
                        <td>
                            <div class="userDatatable-content">
                                @ogrenciDers.Ders.DersAdi
                            </div>
                        </td>
                        <td>
                            <div class="userDatatable-content">
                                @ogrenciDers.Ogrenci.AdSoyad
                            </div>
                        </td>
                        <td><a href="@Url.Action("OgrenciDersEdit","Home", new {  id=ogrenciDers.OgrenciDersId  })" class="templatemo-edit-btn">Edit</a></td>
                        <td><a href="@Url.Action("OgrenciDersRemove","Home", new {  id=ogrenciDers.OgrenciDersId  })" class="templatemo-link">Delete</a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
            }
        </tbody>
    </table>
</div>


