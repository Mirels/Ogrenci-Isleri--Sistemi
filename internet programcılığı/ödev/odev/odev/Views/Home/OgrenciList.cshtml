@model IEnumerable<odev.Models.Ogrenci>
@{
    Layout = "~/Views/Shared/Sidebar.cshtml";
}
<a href="@Url.Action("OgrenciAdd","Home")" class="btn px-15 btn-primary">
    <i class="las la-plus fs-16"></i>Yeni Öğrenci Ekle
</a>
<div class="panel panel-default table-responsive">
    <table class="table table-striped table-bordered templatemo-user-table">
        <thead>
            <tr class="userDatatable-header">
                <th>
                    <span class="userDatatable-title">ÖğrenciId</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Öğrenci No</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Adı Soyadı</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Bölümü</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Edit</span>
                </th>
                <th>
                    <span class="userDatatable-title float-right">Sil</span>
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var ogrenci in Model)
                {
            <tr>
                <td>
                    <div class="userDatatable-content" style="align-items:center">
                        @ogrenci.OgrenciId
                    </div>
                </td>
                <td>
                    <div class="userDatatable-content">
                        @ogrenci.OgrenciNo
                    </div>
                </td>
                <td>
                    <div class="userDatatable-content">
                        @ogrenci.AdSoyad
                    </div>
                </td>
                <td>
                    <div class="userDatatable-content">
                        @ogrenci.Bolum
                    </div>
                </td>
                <td><a href="@Url.Action("OgrenciEdit","Home", new {  id=ogrenci.OgrenciId  })" class="templatemo-edit-btn">Edit</a></td>
                <td><a href="@Url.Action("OgrenciRemove","Home", new {  id=ogrenci.OgrenciId  })" class="templatemo-link">Delete</a></td>
            </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">&nbsp;</td>
                </tr>
            }
        </tbody>
    </table>
</div>
